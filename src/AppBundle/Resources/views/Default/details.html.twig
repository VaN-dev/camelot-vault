{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ blueprint.name }}</h1>

    <div class="row">
        <div class="col-md-9">
            <p class="lead">
                by <a href="#">{{ blueprint.uploadedBy.username }}</a>
            </p>

            <hr>

            <p>
                <span class="glyphicon glyphicon-time"></span>
                Uploaded on {{ blueprint.uploadedAt | date("F d, Y \\a\\t g:m A") }}

                <span class="label label-primary pull-right">Downloaded {{ blueprint.downloaded }} {% transchoice blueprint.downloaded %}{0,1} time|]1,Inf] times{% endtranschoice %}</span>
            </p>

            <hr>

            <img class="img-responsive" alt="" src="{{ asset('bundles/vanresource/images/blueprint-900x300.jpg') }}">

            <hr>

            <ul class="list-inline preview-links">
                <li>
                    <a href="{{ path('van_resource_blueprint_download', {'id': blueprint.id}) }}" class="btn btn-default">
                        <span class="glyphicon glyphicon-download-alt"></span> Download
                    </a>
                </li>
                <li>
                    <a href="#" class="btn btn-default">
                        <span class="glyphicon glyphicon-thumbs-up"></span> Recommend
                    </a>
                </li>
                <li>
                    <a href="#comments" class="btn btn-default">
                        <span class="glyphicon glyphicon-comment"></span> Leave a comment
                    </a>
                </li>
            </ul>

            <hr>

            <p>{{ blueprint.description }}</p>

            <a name="comments"></a>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Leave a comment</h3>
                </div>
                <div class="panel-body">
                    <form>
                        <div class="form-group">
                            <textarea class="form-control"></textarea>
                        </div>
                    </form>

                    <div>
                        <input type="submit" name="submit" class="btn btn-primary" value="Register">
                    </div>
                </div>
            </div>

            <hr>

            {% for i in 1..4 %}
                <blockquote>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
                    <footer><span class="glyphicon glyphicon-time"></span> Posted on August 24, 2013 at 9:00 PM by <a href="#">John Doe</a></footer>
                </blockquote>
            {% endfor %}
        </div>
        <div class="col-md-3">
            <h4>Categories</h4>
            <div class="list-group">
                <a href="#" class="list-group-item">
                    Cras justo odio
                    <span class="badge">9</span>
                </a>
                <a href="#" class="list-group-item">
                    Dapibus ac facilisis in
                    <span class="badge">14</span>
                </a>
                <a href="#" class="list-group-item">
                    Morbi leo risus
                    <span class="badge">18</span>
                </a>
                <a href="#" class="list-group-item">
                    Porta ac consectetur ac
                    <span class="badge">3</span>
                </a>
                <a href="#" class="list-group-item">
                    Vestibulum at eros
                    <span class="badge">23</span>
                </a>
            </div>
        </div>
    </div>

{% endblock %}